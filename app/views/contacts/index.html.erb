<div class="content-padded">

  <h1>Listing contacts</h1>

  <ul class="table-view">
    <% @contacts.each do |contact| %>
      <li class="table-view-cell">
        <%= link_to contact.email, contact_path(contact) %>
        <%= link_to new_contact_payment_path(contact) do%>
          <button class="btn btn-positive">Pay</button>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to new_contact_path do %>
    <button class="btn btn-primary btn-block btn-outlined">New Contact</button>
  <% end %>

<button onclick="auth();" class="btn btn-primary btn-block btn-outlined" >Google contacts</button>
</div>

