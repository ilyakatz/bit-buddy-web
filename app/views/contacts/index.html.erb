<div class="content-padded contact-list">

  <ul class="table-view">
    <% @contacts.each do |contact| %>
      <li class="table-view-cell media">
        <%= link_to  contact_path(contact) do %>
          <span class="gravatar pull-left">
            <%= gravatar_image_tag(contact.email, gravatar: { size: 30, secure: true, default: :wavatar }) %>
          </span>
          <div class="media-body navigate-right">
            <%= contact.email %>
          </div>
        <% end %>
        <%= link_to new_contact_payment_path(contact) do%>
          <button class="btn btn-positive">Pay</button>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to new_contact_path do %>
    <button class="btn btn-primary btn-block btn-outlined">New Contact</button>
  <% end %>

</div>
